
<!-- Modal -->
<div class="modal fade" id="modal{{@index}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog modal-lg">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><b>{{title}}</b></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div>제목 : {{title}}</div>
        <div>가격 : {{sale_price}}</div>
        <div>저자 : {{authors}}</div>
        <div>출판사 : {{publisher}}</div>
        <div>ISBN : {{isbn}}</div>
        <div>출판일 : {{datetime}}</div>
        <hr>
        <p>{{contents}}</p>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-dark">Buy</button>
    </div>
    </div>
</div>
</div>